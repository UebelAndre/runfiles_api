{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "before 1am"
  ],
  "timezone": "UTC",
  "labels": [
    "dependencies",
    "bazel"
  ],
  "prConcurrentLimit": 10,
  "commitMessagePrefix": "bazel:",
  "bazel-module": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["bazel-module"],
      "groupName": "Bazel dependencies"
    }
  ]
}

